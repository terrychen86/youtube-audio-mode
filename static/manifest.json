{
  "manifest_version": 2,
  "name": "Youtube Audio Mode",
  "description": "Audio-only mode on Youtube to save your internet bandwidth",
  "version": "0.0.1",
  "permissions": ["storage", "tabs", "webRequest", "webRequestBlocking", "*://*.youtube.com/", "*://*.googlevideo.com/"],
  "background": {
    "scripts": [
      "chrome.js",
      "hot-reload.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["app.js"],
      "css": ["app.css"],
      "run_at": "document_start"
    }
  ]
}
