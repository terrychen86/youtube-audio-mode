{
  "manifest_version": 2,
  "name": "Youtube Audio Mode",
  "description": "Enable Song Mode on Youtube to save internet bandwidth!",
  "version": "0.0.1",
  "permissions": ["tabs", "webRequest", "webRequestBlocking", "*://*.youtube.com/", "*://*.googlevideo.com/"],
  "background": {
    "scripts": [
      "chrome.js"
    ]
  },
  "icons": {
    "32": "icon-32.png",
    "48": "icon-48.png",
   "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["app.js"],
      "css": ["app.css"],
      "run_at": "document_start"
    }
  ]
}
